generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MONITOREO
enum EstadoEquipo {
  OPERATIVO
  EN_MANTENIMIENTO
  CARGANDO
  DESCARGANDO
  TRANSPORTANDO
}

model Equipo {
  id String @id @default(uuid())
  codigo String @unique
  tipo String
  estado EstadoEquipo @default(OPERATIVO)
  nivelCombustible Float
  horasOperacion Int

  operadorId String @unique
  operador Operador @relation(name: "Asignacion", fields: [operadorId], references: [id])

  volquete Volquete?
  excavadora Excavadora?

  supervisores Supervisor[] @relation("SupervisoresDeEquipos")
}

model Volquete {
  id String @id
  capacidadCarga Float
  cargaActual Float
  equipo Equipo @relation(fields: [id], references: [id], onDelete: Cascade)
}

model Excavadora {
  id String @id
  tipoExcavacion String
  equipo Equipo @relation(fields: [id], references: [id], onDelete: Cascade)
}

// USUARIOS
model Persona {
  id String @id
  nombre String
  apellido String

  operador Operador?
  supervisor Supervisor?
}

model Operador {
  id String @id
  licencia String
  persona Persona @relation(fields: [id], references: [id], onDelete: Cascade)
  equipo Equipo? @relation(name: "Asignacion")
}

model Supervisor {
  id String @id
  persona Persona @relation(fields: [id], references: [id], onDelete: Cascade)
  equipos Equipo[] @relation("SupervisoresDeEquipos")
}